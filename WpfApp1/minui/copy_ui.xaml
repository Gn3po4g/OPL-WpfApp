        mc:Ignorable="d"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:local="clr-namespace:OPL_WpfApp.minui"
        Title="手动复制窗口" Height="287" Width="373">
    <Grid >
        <TextBox HorizontalAlignment="Center" Margin="0,18,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="148" Width="353" Name="copybox" IsReadOnly="True"/>
        <Button Content="关闭" Margin="0,207,0,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Center"/>
        <Label Content="由于自动可能复制失败了，请手动选择上面文本进行复制&#xD;&#xA;（也可能复制成功了）" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,166,0,0" />

    </Grid>
